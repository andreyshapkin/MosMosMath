<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NumPad">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="50"
        android:gravity="center"
        android:orientation="horizontal">

        <TableLayout
            android:id="@+id/numPadTable"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="60">

            <TableRow
                android:layout_width="match_parent"
                android:layout_weight="20">

                <Button
                    android:id="@+id/buttonNumPad7"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:text="7"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/buttonNumPad8"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:text="8"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/buttonNumPad9"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:text="9"
                    android:textSize="24sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_weight="20">

                <Button
                    android:id="@+id/buttonNumPad4"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:text="4"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/buttonNumPad5"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:text="5"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/buttonNumPad6"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:text="6"
                    android:textSize="24sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_weight="20">

                <Button
                    android:id="@+id/buttonNumPad1"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:text="1"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/buttonNumPad2"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:text="2"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/buttonNumPad3"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:text="3"
                    android:textSize="24sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_weight="20">

                <Button
                    android:id="@+id/buttonFake0"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:text="0"
                    android:textSize="24sp"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/buttonNumPad0"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:text="0"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/buttonFake1"
                    android:layout_height="match_parent"
                    android:layout_weight="20"
                    android:text="0"
                    android:textSize="24sp"
                    android:visibility="invisible" />
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonNumPadEnter"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:text="Enter"
                android:textSize="18sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10" />

            <Button
                android:id="@+id/buttonNumPadCancel"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:text="Cancel"
                android:textSize="18sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10" />

            <Button
                android:id="@+id/buttonNumPadNext"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20"
                android:text="--->"
                android:textSize="18sp" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="20" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>