<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Math text" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewProblem0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:gravity="center"
                android:text="TextView" />

            <TextView
                android:id="@+id/textViewProblem1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:gravity="center"
                android:text="TextView" />

            <TextView
                android:id="@+id/textViewProblem2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:gravity="center"
                android:text="TextView" />

            <TextView
                android:id="@+id/textViewProblem3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:gravity="center"
                android:text="TextView" />

            <TextView
                android:id="@+id/textViewProblem4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:gravity="center"
                android:text="TextView" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewStats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Stats" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50"
            android:gravity="center"
            android:orientation="horizontal">

            <TableLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="60">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_weight="20">

                    <Button
                        android:id="@+id/buttonNumPad7"
                        android:layout_height="match_parent"
                        android:layout_weight="20"
                        android:onClick="NumPadClick"
                        android:text="7" />

                    <Button
                        android:id="@+id/buttonNumPad8"
                        android:layout_height="match_parent"
                        android:layout_weight="20"
                        android:onClick="NumPadClick"
                        android:text="8" />

                    <Button
                        android:id="@+id/buttonNumPad9"
                        android:layout_height="match_parent"
                        android:layout_weight="20"
                        android:onClick="NumPadClick"
                        android:text="9" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_weight="20">

                    <Button
                        android:id="@+id/buttonNumPad4"
                        android:layout_height="match_parent"
                        android:layout_weight="20"
                        android:onClick="NumPadClick"
                        android:text="4" />

                    <Button
                        android:id="@+id/buttonNumPad5"
                        android:layout_height="match_parent"
                        android:layout_weight="20"
                        android:onClick="NumPadClick"
                        android:text="5" />

                    <Button
                        android:id="@+id/buttonNumPad6"
                        android:layout_height="match_parent"
                        android:layout_weight="20"
                        android:onClick="NumPadClick"
                        android:text="6" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_weight="20">

                    <Button
                        android:id="@+id/buttonNumPad1"
                        android:layout_height="match_parent"
                        android:layout_weight="20"
                        android:onClick="NumPadClick"
                        android:text="1" />

                    <Button
                        android:id="@+id/buttonNumPad2"
                        android:layout_height="match_parent"
                        android:layout_weight="20"
                        android:onClick="NumPadClick"
                        android:text="2" />

                    <Button
                        android:id="@+id/buttonNumPad3"
                        android:layout_height="match_parent"
                        android:layout_weight="20"
                        android:onClick="NumPadClick"
                        android:text="3" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_weight="20">

                    <Button
                        android:id="@+id/buttonFake0"
                        android:layout_height="match_parent"
                        android:layout_weight="20"
                        android:text="Button"
                        android:visibility="invisible" />

                    <Button
                        android:id="@+id/buttonNumPad0"
                        android:layout_height="match_parent"
                        android:layout_weight="20"
                        android:onClick="NumPadClick"
                        android:text="0" />

                    <Button
                        android:id="@+id/buttonFake1"
                        android:layout_height="match_parent"
                        android:layout_weight="20"
                        android:text="Button"
                        android:visibility="invisible" />
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:orientation="vertical">

                <Button
                    android:id="@+id/buttonNumPadEnter"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="20"
                    android:onClick="NumPadClick"
                    android:text="Enter" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="10" />

                <Button
                    android:id="@+id/buttonNumPadCancel"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="20"
                    android:onClick="NumPadClick"
                    android:text="Cancel" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="10" />

                <Button
                    android:id="@+id/buttonNumPadNext"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="20"
                    android:onClick="NumPadClick"
                    android:text="Next" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="20" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>